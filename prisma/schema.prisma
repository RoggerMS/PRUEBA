  title    String         @default("Sin título")
  content  String         @default("")
  orderIndex Int          @default(0)
  
  blockId  String
  block    WorkspaceBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  @@map("docs_pages")
}

model KanbanColumn {
  id         String         @id @default(cuid())
  title      String
  orderIndex Int            @default(0)
  
  blockId    String
  block      WorkspaceBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  
  // Relations
  cards      KanbanCard[]
  
  @@map("kanban_columns")
}

model KanbanCard {
  id          String       @id @default(cuid())
  title       String
  description String       @default("")
  orderIndex  Int          @default(0)
  
  columnId    String
  column      KanbanColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@map("kanban_cards")
}

model FrasesItem {
  id      String         @id @default(cuid())
  content String
  tags    Json           @default("[]")
  
  blockId String
  block   WorkspaceBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  
  @@map("frases_items")
}

// ============================================================================
// NOTIFICATIONS
// ============================================================================

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String
  data      Json?            // Additional data
  
  read      Boolean          @default(false)
  
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime         @default(now())
  
  @@map("notifications")
}

// ============================================================================
// MODERATION
// ============================================================================

model Report {
  id        String     @id @default(cuid())
  reason    String
  details   String?
  status    ReportStatus @default(PENDING)
  
  reporterId String
  reporter  User       @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  
  postId    String?
  post      Post?      @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  commentId String?
  comment   Comment?   @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  noteId    String?
  note      Note?      @relation(fields: [noteId], references: [id], onDelete: Cascade)
  
  questionId String?
  question  Question?  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  answerId  String?
  answer    Answer?    @relation(fields: [answerId], references: [id], onDelete: Cascade)
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  @@map("reports")
}

// ============================================================================
// GAMIFICATION SYSTEM
// ============================================================================

model Badge {
  id          String    @id @default(cuid())
  code        String    @unique
  slug        String    @unique
  name        String
  description String?
  rarity      BadgeRarity @default(COMMON)
  category    String
  iconUrl     String?
  isActive    Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  achievements Achievement[]
  userBadges  UserBadge[]
  
  @@index([category])
  @@index([rarity])
  @@index([isActive])
  @@map("badges")
}

model Achievement {
  id          String    @id @default(cuid())
  code        String    @unique
  name        String
  description String?
  ruleType    String    // e.g., "counter", "streak", "event"
  ruleConfig  Json      // Configuration for the rule
  
  badgeId     String
  badge       Badge     @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  isActive    Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  userBadges  UserBadge[]
  
  @@index([ruleType])
  @@index([badgeId])
  @@index([isActive])
  @@map("achievements")
}

model UserBadge {
  id          String    @id @default(cuid())
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  badgeId     String
  badge       Badge     @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  achievementId String?
  achievement Achievement? @relation(fields: [achievementId], references: [id], onDelete: SetNull)
  
  earnedAt    DateTime  @default(now())
  metadata    Json?     // Additional data about how the badge was earned
  
  createdAt   DateTime  @default(now())
  
  @@unique([userId, badgeId])
  @@index([userId])
  @@index([earnedAt])
  @@index([badgeId])
  @@map("user_badges")
}

model ProgressCounter {
  id           String    @id @default(cuid())
  
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  key          String    // e.g., "posts_created", "login_streak", "profile_completion"
  currentValue Int       @default(0)
  targetValue  Int?
  
  lastUpdated  DateTime  @default(now())
  createdAt    DateTime  @default(now())
  
  @@unique([userId, key])
  @@index([userId])
  @@index([key])
  @@index([lastUpdated])
  @@map("progress_counters")
}

model Activity {
  id          String   @id @default(cuid())
  userId      String
  type        String   // 'badge_earned', 'achievement_unlocked', 'level_up', etc.
  description String
  xpGained    Int?     @default(0)
  crolars     Int?     @default(0)
  metadata    Json?    // Datos adicionales específicos del tipo de actividad
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([type, createdAt])
}



